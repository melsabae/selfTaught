##############################################
# Settings
##############################################
background yes
use_xft yes
xftfont Source Code Pro:size=9
xftalpha 0.5
update_interval 3
total_run_times 0
own_window yes
own_window_type normal
own_window_transparent yes
#own_window_argb_visual
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 200 5
maximum_width 252
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
alignment bottom_right
gap_x 5
gap_y 5
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
TEXT
load $alignr $loadavg
${if_existing /proc/net/route wlan0}wlan0${alignr}up:${upspeed wlan0} down:${downspeed wlan0}${endif}
cpu0 $alignr ${cpu cpu0}%
${cpubar cpu0}
cpu1 $alignr ${cpu cpu1}%
${cpubar cpu1}
cpu2 $alignr ${cpu cpu2}%
${cpubar cpu2}
cpu3 $alignr ${cpu cpu3}%
${cpubar cpu3}
mem $alignc $mem / $memmax $alignr $memperc%
$membar
/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
swap $alignc $swap / $swapmax $alignr $swapperc%
${swapbar}
$processes existing ($running_processes running) $alignr PID    CPU
${top name 1} $alignr ${top pid 1} ${top cpu 1}
${top name 2} $alignr ${top pid 2} ${top cpu 2}
${top name 3} $alignr ${top pid 3} ${top cpu 3}
${top name 4} $alignr ${top pid 4} ${top cpu 4}
${top name 5} $alignr ${top pid 5} ${top cpu 5}

